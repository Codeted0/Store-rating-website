generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/.prisma/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int     @id @default(autoincrement())
  name     String
  email    String  @unique
  password String
  address  String?
  role     Role
  stores   Store[]
  ratings  Rating[]
}

model Store {
  id        Int      @id @default(autoincrement())
  name      String
  email     String?  @unique
  address   String
  avgRating Float    @default(0)
  owner     User     @relation(fields: [ownerId], references: [id])
  ownerId   Int
  ratings   Rating[]
}

model Rating {
  id          Int   @id @default(autoincrement())
  ratingValue Int
  user        User  @relation(fields: [userId], references: [id])
  userId      Int
  store       Store @relation(fields: [storeId], references: [id])
  storeId     Int

  @@unique([userId, storeId])
}

enum Role {
  admin
  user
  owner
}
